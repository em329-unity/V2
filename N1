<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sigma.js Network</title>
  <style>
    /* Set the size for the Sigma container */
    #sigma-container {
      width: 100%;
      height: 600px;
      border: 1px solid #ccc;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/sigma@2.2.2/build/sigma.min.js"></script>
</head>
<body>

  <h1>Network Visualization with Sigma.js</h1>

  <div id="sigma-container"></div>

  <script>
    // Create a graph object
    const graph = new sigma.graph();

    // Add nodes to the graph
    graph.addNode({
      id: 'n0',
      label: 'Node 0',
      x: Math.random(),
      y: Math.random(),
      size: 10,
      color: '#FF0000'
    });

    graph.addNode({
      id: 'n1',
      label: 'Node 1',
      x: Math.random(),
      y: Math.random(),
      size: 10,
      color: '#00FF00'
    });

    graph.addNode({
      id: 'n2',
      label: 'Node 2',
      x: Math.random(),
      y: Math.random(),
      size: 10,
      color: '#0000FF'
    });

    // Add edges between nodes
    graph.addEdge({
      id: 'e0',
      source: 'n0',
      target: 'n1',
      size: 2,
      color: '#000000'
    });

    graph.addEdge({
      id: 'e1',
      source: 'n1',
      target: 'n2',
      size: 2,
      color: '#000000'
    });

    graph.addEdge({
      id: 'e2',
      source: 'n2',
      target: 'n0',
      size: 2,
      color: '#000000'
    });

    // Initialize Sigma.js with the graph object and the container
    const sigmaInstance = new sigma({
      graph: graph,
      container: 'sigma-container',
      settings: {
        defaultNodeColor: '#ec5148',  // Default node color
        defaultEdgeColor: '#ccc'      // Default edge color
      }
    });
  </script>

</body>
</html>
